<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/message_padding_top"
    android:paddingLeft="@dimen/message_padding_left"
    android:paddingRight="@dimen/message_padding_right"
    android:paddingBottom="@dimen/message_padding_bottom"
    android:layout_margin="@dimen/message_margin"
    android:background="@drawable/spech_bubble">
    <TextView
        android:id="@+id/message"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/edittext_textsize"
        android:textStyle="bold"
        android:text="Estes" />
    <TextView
        android:id="@+id/hour"
        android:text="asdasd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginTop="@dimen/message_margin" />
</RelativeLayout>